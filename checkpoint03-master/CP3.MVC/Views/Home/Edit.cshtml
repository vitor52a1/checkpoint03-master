@model CP3.MVC.Application.Dtos.BarcoDto

<h2>Editar Barco</h2>
<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Nome">Nome</label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Modelo">Modelo</label>
        <input asp-for="Modelo" class="form-control" />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="Ano">Ano</label>
        <input asp-for="Ano" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Tamanho">Tamanho</label>
        <input asp-for="Tamanho" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Salvar</button>
    <a href="@Url.Action("Index", "Barco")" class="btn btn-secondary">Cancelar</a>
</form>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
