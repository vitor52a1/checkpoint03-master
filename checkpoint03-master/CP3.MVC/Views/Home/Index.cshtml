@model IEnumerable<CP3.MVC.Application.Dtos.BarcoDto>

    <h2>Lista de Barcos</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Modelo</th>
                <th>Ano</th>
                <th>Tamanho</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var barco in Model)
        {
            <tr>
                <td>@barco.Id</td>
                <td>@barco.Nome</td>
                <td>@barco.Modelo</td>
                <td>@barco.Ano</td>
                <td>@barco.Tamanho</td>
                <td>
                    <a href="@Url.Action("Details", "Barco", new { id = barco.Id })">Detalhes</a> |
                    <a href="@Url.Action("Edit", "Barco", new { id = barco.Id })">Editar</a> |
                    <a href="@Url.Action("Delete", "Barco", new { id = barco.Id })">Excluir</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
    <a href="@Url.Action("Create", "Barco")" class="btn btn-primary">Adicionar Novo Barco</a>
